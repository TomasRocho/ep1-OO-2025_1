<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="500.0"
            >

   <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
      <children>
         <Label mnemonicParsing="false" prefHeight="25.0" prefWidth="190.0" text="SELEÇÃO DE MODO:" >
            <font>
               <Font name="System Bold Italic" size="20" />
            </font>
            <VBox.margin>
               <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </VBox.margin>
         </Label>
         <Button fx:id="btnAluno" onAction="#btnAlunoClick" mnemonicParsing="false" prefHeight="25.0" prefWidth="160.0" text="Aluno">
            <VBox.margin>
               <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </VBox.margin>
         </Button>
         <Button fx:id="btnDisciplina" onAction="#btnDisciplinaClick" mnemonicParsing="false" prefHeight="25.0" prefWidth="160.0" text="Disciplina/Turma">
            <VBox.margin>
               <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </VBox.margin>
         </Button>
         <Button fx:id="btnAvaliacao" onAction="#btnAvaliacaoClick" mnemonicParsing="false" prefHeight="25.0" prefWidth="160.0" text="Avaliação/Frequência">
            <VBox.margin>
               <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </VBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#sair" fx:id="btnSair" prefHeight="25.0" prefWidth="160.0" text="Sair">
            <VBox.margin>
               <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </VBox.margin>
         </Button>
      </children>
   </VBox>

</AnchorPane>

